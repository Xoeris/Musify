<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PlayerControlIcon">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="NavigationIcon">
        <item name="android:tint">@color/text</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="DurationText">
        <item name="android:tint">@color/text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TransparentBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>
</resources>